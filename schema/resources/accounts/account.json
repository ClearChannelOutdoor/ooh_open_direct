{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/thisisglobal/ooh_open_direct/master/schema/resources/accounts/account.json",
    "type": "object",
    "title": "Account object",
    "description": "An account defines a buyer-advertiser relationship.",
    "default": {},
    "additionalProperties": false,
    "required": [
        "AdvertiserId",
        "BuyerId",
        "ThirdPartyId",
        "Id",
        "Name"
    ],
    "properties": {
        "AdvertiserId": {
            "$id": "#/properties/AdvertiserId",
            "type": "string",
            "title": "The Advertiserid Schema",
            "description": "An explanation about the purpose of this instance.",
            "minLength": 1,
            "maxLength": 36
        },
        "BuyerId": {
            "$id": "#/properties/BuyerId",
            "type": "string",
            "title": "The Buyerid Schema",
            "description": "An explanation about the purpose of this instance.",
            "minLength": 1,
            "maxLength": 36
        },
        "ThirdPartyId": {
            "$id": "#/properties/ThirdPartyId",
            "type": "string",
            "title": "The Thirdpartyid Schema",
            "description": "An explanation about the purpose of this instance.",
            "minLength": 1,
            "maxLength": 36
        },
        "Name": {
            "$id": "#/properties/Name",
            "type": "string",
            "title": "Name",
            "description": "The name of the account. Used for display purposes"
        },
        "ProviderData": {
            "$id": "#/proerties/ProviderData",
            "type": "string",
            "title": "Provider Data",
            "description": ""
        }
    }
}